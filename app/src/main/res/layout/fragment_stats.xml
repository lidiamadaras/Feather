<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/HomeTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/myDreamsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Dreams"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:gravity="left"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <!-- My Feelings -->
            <TextView
                android:id="@+id/myFeelingsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Feelings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:gravity="left"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <!-- My Affirmations -->
            <TextView
                android:id="@+id/myAffirmationsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Affirmations"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:gravity="left"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <!-- My Reflections -->
            <TextView
                android:id="@+id/myReflectionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Reflections"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:gravity="left"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/myKeywordsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Keywords"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:gravity="left"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/myEmotionsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Emotions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:gravity="left"
                android:padding="12dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>









